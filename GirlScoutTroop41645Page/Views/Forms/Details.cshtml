@model GirlScoutTroop41645Page.Models.Form

@{
    ViewData["Title"] = "Form Details";
}

<div class="container">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <div>
                        <h3>@Model.Title</h3>
                        @if (!string.IsNullOrEmpty(Model.Description))
                        {
                            <p class="mb-0">@Model.Description</p>
                        }
                    </div>
                    <div>
                        @if (Model.IsActive)
                        {
                            <span class="badge bg-success">Active</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">Inactive</span>
                        }
                    </div>
                </div>
                <div class="card-body">
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <h6>Form Information</h6>
                            <table class="table table-borderless">
                                <tr>
                                    <td><strong>Created:</strong></td>
                                    <td>@Model.CreatedDate.ToString("MMM dd, yyyy 'at' h:mm tt")</td>
                                </tr>
                                @if (Model.DueDate.HasValue)
                                {
                                    <tr>
                                        <td><strong>Due Date:</strong></td>
                                        <td>
                                            @Model.DueDate.Value.ToString("MMM dd, yyyy 'at' h:mm tt")
                                            @if (Model.DueDate < DateTime.UtcNow)
                                            {
                                                <span class="text-danger">(Expired)</span>
                                            }
                                        </td>
                                    </tr>
                                }
                                <tr>
                                    <td><strong>Total Fields:</strong></td>
                                    <td>@Model.FormFields.Count</td>
                                </tr>
                                <tr>
                                    <td><strong>Total Submissions:</strong></td>
                                    <td>@Model.FormSubmissions.Count</td>
                                </tr>
                            </table>
                        </div>
                    </div>

                    @if (Model.FormFields.Any())
                    {
                        <h6>Form Fields Preview</h6>
                        <div class="border p-3 bg-light rounded">
                            @foreach (var field in Model.FormFields.OrderBy(f => f.DisplayOrder))
                            {
                                <div class="mb-3">
                                    <label class="form-label fw-bold">
                                        @field.Label
                                        @if (field.IsRequired)
                                        {
                                            <span class="text-danger">*</span>
                                        }
                                    </label>
                                    
                                    @if (!string.IsNullOrEmpty(field.HelpText))
                                    {
                                        <div class="form-text mb-2">@field.HelpText</div>
                                    }

                                    @switch (field.FieldType)
                                    {
                                        case GirlScoutTroop41645Page.Models.FormFieldType.Text:
                                            <input type="text" class="form-control" placeholder="Text input" disabled />
                                            break;
                                            
                                        case GirlScoutTroop41645Page.Models.FormFieldType.TextArea:
                                            <textarea class="form-control" rows="3" placeholder="Text area" disabled></textarea>
                                            break;
                                            
                                        case GirlScoutTroop41645Page.Models.FormFieldType.Number:
                                            <input type="number" class="form-control" placeholder="Number input" disabled />
                                            break;
                                            
                                        case GirlScoutTroop41645Page.Models.FormFieldType.Email:
                                            <input type="email" class="form-control" placeholder="Email input" disabled />
                                            break;
                                            
                                        case GirlScoutTroop41645Page.Models.FormFieldType.Date:
                                            <input type="date" class="form-control" disabled />
                                            break;
                                            
                                        case GirlScoutTroop41645Page.Models.FormFieldType.Checkbox:
                                            <div class="form-check">
                                                <input type="checkbox" class="form-check-input" disabled />
                                                <label class="form-check-label">Checkbox option</label>
                                            </div>
                                            break;
                                            
                                        case GirlScoutTroop41645Page.Models.FormFieldType.Radio:
                                            @if (!string.IsNullOrEmpty(field.Options))
                                            {
                                                @foreach (var option in field.Options.Split('\n', StringSplitOptions.RemoveEmptyEntries))
                                                {
                                                    var optionValue = option.Trim();
                                                    <div class="form-check">
                                                        <input type="radio" class="form-check-input" disabled />
                                                        <label class="form-check-label">@optionValue</label>
                                                    </div>
                                                }
                                            }
                                            break;
                                            
                                        case GirlScoutTroop41645Page.Models.FormFieldType.Dropdown:
                                            <select class="form-select" disabled>
                                                <option>Select an option...</option>
                                                @if (!string.IsNullOrEmpty(field.Options))
                                                {
                                                    @foreach (var option in field.Options.Split('\n', StringSplitOptions.RemoveEmptyEntries))
                                                    {
                                                        var optionValue = option.Trim();
                                                        <option>@optionValue</option>
                                                    }
                                                }
                                            </select>
                                            break;
                                    }
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-warning">
                            <h6>No Fields Added</h6>
                            <p class="mb-0">This form has no fields yet. Users will not be able to fill out this form until fields are added.</p>
                        </div>
                    }

                    <div class="d-flex justify-content-between mt-4">
                        <a asp-action="Index" class="btn btn-secondary">Back to Forms</a>
                        <div>
                            @if (User.IsInRole("TroopLeader") || User.IsInRole("TroopSectionLeader"))
                            {
                                <a asp-action="Edit" asp-route-id="@Model.FormId" class="btn btn-primary">Edit Form</a>
                                @if (Model.FormSubmissions.Any())
                                {
                                    <a asp-action="Submissions" asp-route-id="@Model.FormId" class="btn btn-info">View Submissions (@Model.FormSubmissions.Count)</a>
                                }
                            }
                            else if (Model.IsActive && (!Model.DueDate.HasValue || Model.DueDate > DateTime.UtcNow))
                            {
                                <a asp-action="Fill" asp-route-id="@Model.FormId" class="btn btn-success">Fill Out Form</a>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>