@model IEnumerable<GirlScoutTroop41645Page.Models.Form>

@{
    ViewData["Title"] = "Forms Management";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2>@ViewData["Title"]</h2>
                @if (User.IsInRole("TroopLeader") || User.IsInRole("TroopSectionLeader"))
                {
                    <a asp-action="Create" class="btn btn-primary">
                        <i class="fas fa-plus"></i> Create New Form
                    </a>
                }
            </div>

            @if (!Model.Any())
            {
                <div class="alert alert-info">
                    <h4>No forms available</h4>
                    <p>There are currently no forms to display.</p>
                    @if (User.IsInRole("TroopLeader") || User.IsInRole("TroopSectionLeader"))
                    {
                        <a asp-action="Create" class="btn btn-primary">Create your first form</a>
                    }
                </div>
            }
            else
            {
                <div class="row">
                    @foreach (var form in Model)
                    {
                        <div class="col-lg-4 col-md-6 mb-4">
                            <div class="card h-100">
                                <div class="card-header d-flex justify-content-between align-items-center">
                                    <h5 class="card-title mb-0">@form.Title</h5>
                                    @if (form.IsActive)
                                    {
                                        <span class="badge bg-success">Active</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Inactive</span>
                                    }
                                </div>
                                <div class="card-body">
                                    @if (!string.IsNullOrEmpty(form.Description))
                                    {
                                        <p class="card-text">@form.Description</p>
                                    }
                                    
                                    <div class="mb-2">
                                        <small class="text-muted">
                                            <strong>Created:</strong> @form.CreatedDate.ToString("MMM dd, yyyy")
                                        </small>
                                    </div>
                                    
                                    @if (form.DueDate.HasValue)
                                    {
                                        <div class="mb-2">
                                            <small class="text-muted">
                                                <strong>Due:</strong> @form.DueDate.Value.ToString("MMM dd, yyyy")
                                                @if (form.DueDate < DateTime.UtcNow)
                                                {
                                                    <span class="text-danger">(Expired)</span>
                                                }
                                            </small>
                                        </div>
                                    }
                                    
                                    <div class="mb-3">
                                        <small class="text-muted">
                                            <strong>Submissions:</strong> @form.FormSubmissions.Count
                                        </small>
                                    </div>
                                </div>
                                <div class="card-footer">
                                    <div class="btn-group w-100" role="group">
                                        <a asp-action="Details" asp-route-id="@form.FormId" class="btn btn-outline-primary btn-sm">
                                            View
                                        </a>
                                        @if (User.IsInRole("TroopLeader") || User.IsInRole("TroopSectionLeader"))
                                        {
                                            <a asp-action="Edit" asp-route-id="@form.FormId" class="btn btn-outline-secondary btn-sm">
                                                Edit
                                            </a>
                                            <a asp-action="Submissions" asp-route-id="@form.FormId" class="btn btn-outline-info btn-sm">
                                                Responses (@form.FormSubmissions.Count)
                                            </a>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
        </div>
    </div>
</div>